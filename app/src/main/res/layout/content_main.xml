<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:orientation="vertical"
    android:paddingBottom="200dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/dietynovlogo" />

    <Button
        android:id="@+id/home_recette"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:text="@string/home_recette"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:onClick="myRecipe"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="100"
        tools:layout_editor_absoluteY="634dp" />

    <Button
        android:id="@+id/home_weight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="myWeight"
        android:text="@string/home_weight"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="645dp" />

    <Button
        android:id="@+id/home_menstruations"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/home_menstruations"
        android:onClick="myMeasures"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="665dp" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="myAccount"
        android:text="@string/home_account"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="655dp" />

</LinearLayout>